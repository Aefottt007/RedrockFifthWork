<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".MainActivity">

    <include layout="@layout/layout_bar"/>

    <TextView
        android:id="@+id/tv_main_sign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@+id/tv_main_hello"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="15dp"
        android:textSize="42sp"
        android:textColor="#2196F3"
        android:text="登录" />
    <TextView
        android:id="@+id/tv_main_hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:layout_constraintBottom_toTopOf="@+id/et_main_account"
        android:textSize="18sp"
        android:textColor="#03A9F4"
        android:text="您好，欢迎来到知乎日报!"/>

    <EditText
        android:id="@+id/et_main_account"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="@drawable/layout_et_login"
        android:drawableLeft="@mipmap/ic_user"
        android:drawableStart="@mipmap/ic_user"
        android:drawablePadding="10dp"
        android:hint="请输入账号"
        android:lines="1"
        android:inputType="text"
        android:maxLength="20"
        android:textColorHint="#9903A9F4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.3" />

    <EditText
        android:id="@+id/et_main_password"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:drawableLeft="@mipmap/ic_password"
        android:drawableStart="@mipmap/ic_password"
        android:drawablePadding="10dp"
        android:hint="请输入密码"
        android:lines="1"
        android:inputType="textPassword"
        android:maxLength="20"
        android:textColorHint="#9903A9F4"
        android:background="@drawable/layout_et_login"
        app:layout_constraintTop_toBottomOf="@+id/et_main_account" />

    <RadioButton
        android:id="@+id/rb_main_agreeAgreement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/et_main_password"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:textColor="#2196F3"
        android:textSize="16sp"
        android:text="同意用户协议"/>
    <Button
        android:id="@+id/btn_main_login"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="15dp"
        app:layout_constraintTop_toBottomOf="@+id/rb_main_agreeAgreement"
        android:textSize="18sp"
        android:text="登录"
        android:background="@drawable/btn_selector"/>
    <TextView
        android:id="@+id/tv_main_noAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_main_login"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="#2196F3"
        android:textSize="18sp"
        android:text="没有账号？立即注册"/>
    <LinearLayout
        android:id="@+id/ll_main_sinaSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginLeft="60dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <ImageView
            android:src="@mipmap/account_sina"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="新浪微博" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:text="新浪微博登陆"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_main_tencentSign"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="60dp"
        android:layout_marginRight="60dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:orientation="vertical">
        <ImageView
            android:src="@mipmap/account_tencent"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:contentDescription="腾讯微博" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:textSize="14sp"
            android:textColor="#000000"
            android:text="腾讯微博登陆"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/ll_main_sinaSign"
        android:layout_margin="15dp"
        android:layout_marginBottom="10dp"
        android:background="#03A9F4"/>

</androidx.constraintlayout.widget.ConstraintLayout>